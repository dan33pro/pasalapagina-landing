{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@styles/*": ["styles/*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@layout/*": ["layouts/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"],
      "@icons/*": ["assets/icons/*"],
      "@logos/*": ["assets/logos/*"],
      "@images/*": ["assets/images/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
